<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/list_bg"
    android:elevation="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_poster_list"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimaryText"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_poster_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/sample_poster" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_list"
        android:layout_width="0dp"
        android:layout_margin="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_poster_list"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/title_label"
        style="@style/TextContent.Primary"/>

    <LinearLayout
        android:id="@+id/ll_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/cv_poster_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_list">

        <RatingBar
            android:id="@+id/rb_vote_average_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:progressBackgroundTint="@color/black"
            android:progressTint="@color/colorSecondary"
            android:rating="2.5"
            android:stepSize="0.1"
            style="?android:attr/ratingBarStyleSmall"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_overview_list"
        android:layout_width="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:minLines="4"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_poster_list"
        app:layout_constraintTop_toBottomOf="@+id/ll_rating_bar"
        tools:text="@string/lorem_label"
        style="@style/TextContent"/>

</androidx.constraintlayout.widget.ConstraintLayout>