<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProjectH071191035" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkVariant</item>
        <item name="colorOnPrimary">@color/colorPrimaryText</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDarkVariant</item>
        <item name="colorOnSecondary">@color/colorSecondaryText</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextContent.Primary">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextContent.SubText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextFrame" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextFrame.Title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextFrame.Aired">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WhiteTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="PoppinsBoldTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

</resources>